{
    "name": "ytake/laravel-smarty",
    "description": "smarty template engine for laravel",
    "keywords": ["laravel", "smarty", "template", "view"],
    "authors": [
        {
            "name": "Yuuki Takezawa",
            "email": "yuuki.takezawa@comnect.jp.net"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=5.3.7",
        "illuminate/support": "4.1.*",
        "illuminate/view": "4.1.*",
        "illuminate/config": "4.1.*",
        "illuminate/console": "4.1.*",
        "illuminate/html": "4.1.*",
        "smarty/smarty": "3.*@stable"
    },
    "require-dev": {
        "predis/predis": "0.*",
        "symfony/framework-bundle": "2.*",
        "symfony/console": "2.*",
        "phpunit/phpunit": "4.*",
        "mockery/mockery": "0.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "suggest": {
        "ext-memcached": "memcached Template Cache Driver",
        "predis/predis": "Redis Template Cache Driver"
    },
    "autoload": {
        "psr-4": {
            "Ytake\\LaravelSmarty\\": "src/Smarty"
        }
    },
    "minimum-stability": "stable"
}